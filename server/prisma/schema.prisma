generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model gif {
  gif_id    String   @id @default(uuid())
  gif_likes Int      @default(0) @db.Integer
  liked     liked[]
  comment   comment[]
}

model user {
  user_id   String   @id @default(uuid())
  user_name String   @unique
  password  String
  avatar    String?
  liked     liked[]
  comment   comment[]
}

model liked {
  user_id String
  gif_id  String

  user user @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  gif   gif   @relation(fields: [gif_id], references: [gif_id], onDelete: Cascade)

  @@id([user_id, gif_id])
}

model comment {
  comment_id Int
  gif_id     String
  user_id    String
  text       String?

  user user @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  gif   gif   @relation(fields: [gif_id], references: [gif_id], onDelete: Cascade)

  @@id([gif_id, user_id, comment_id])
}
